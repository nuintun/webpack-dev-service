{
  "name": "webpack-dev-service",
  "version": "0.14.13",
  "description": "A koa 2 middleware for webpack development and hot reloading.",
  "type": "module",
  "sideEffects": [
    "esm/client/main.js",
    "cjs/client/main.cjs"
  ],
  "main": "cjs/server/index.cjs",
  "module": "esm/server/index.js",
  "exports": {
    ".": {
      "import": "./esm/server/index.js",
      "require": "./cjs/server/index.cjs"
    },
    "./client": {
      "import": "./esm/client/index.js",
      "require": "./cjs/client/index.cjs"
    }
  },
  "files": [
    "cjs",
    "esm",
    "global.d.ts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/webpack-dev-service.git"
  },
  "keywords": [
    "dev",
    "koa",
    "server",
    "webpack",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/webpack-dev-service/issues"
  },
  "homepage": "https://github.com/nuintun/webpack-dev-service#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node webpack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build:fix-types": "node tools/fix-types.js",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:fix-types"
  },
  "dependencies": {
    "@nuintun/ansi": "^0.3.0",
    "@types/koa": "^2.15.0",
    "@types/ws": "^8.5.14",
    "etag": "^1.8.1",
    "memfs": "^4.17.0",
    "range-parser": "^1.2.1",
    "schema-utils": "^4.3.0",
    "supports-color": "^10.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@swc/core": "^1.10.18",
    "@swc/helpers": "^0.5.15",
    "@types/etag": "^1.8.3",
    "@types/node": "^22.13.5",
    "@types/range-parser": "^1.2.7",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "css-loader": "^7.1.2",
    "dts-paths": "^1.1.3",
    "html-webpack-plugin": "^5.6.3",
    "koa": "^2.15.4",
    "koa-compress": "^5.1.1",
    "magic-string": "^0.30.17",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.8",
    "swc-loader": "^0.2.6",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0"
  },
  "peerDependencies": {
    "koa": ">=2.0.0",
    "webpack": ">=5.20.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core"
    ]
  }
}
