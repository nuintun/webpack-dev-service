{
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
